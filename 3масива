<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        .grid-container {
            display: grid;
            grid-template-columns: repeat(3, 100px);
            grid-gap: 5px;
            width: 315px;
            margin: 20px auto;
        }

        .grid-item {
            width: 100px;
            height: 100px;
            border: 1px solid #000;
            text-align: center;
            vertical-align: middle;
            font-size: 24px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .white {
            background-color: white;
        }

        .black {
            background-color: black;
        }
    </style>
    <title>Интерактивная таблица с фишками</title>
</head>
<body>
    <div class="grid-container">
        <!-- Здесь ячейки будут создаваться динамически с помощью JavaScript -->
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const gridContainer = document.querySelector(".grid-container");
            const numRows = 9;
            const numCols = 9;
            let currentPlayer = "⚪";

            for (let row = 0; row < numRows; row++) {
                for (let col = 0; col < numCols; col++) {
                    const cell = document.createElement("div");
                    cell.classList.add("grid-item");

                    if ((row === 0 && col === 1) || (row === 2 && col === 1)) {
                        cell.textContent = "⚫";
                        cell.classList.add("black");
                    } else if ((row === 0 && col === 0) || (row === 2 && col === 2)) {
                        cell.textContent = "⚪";
                        cell.classList.add("white");
                    }

                    cell.addEventListener("click", () => {
                        if (!cell.textContent) {
                            const adjacentCells = cell.parentElement.children;
                            const adjacentCell = adjacentCells[row + 1] && adjacentCells[row + 1].children[col];
                            if (adjacentCell && adjacentCell.textContent === currentPlayer) {
                                cell.textContent = currentPlayer;
                                cell.classList.add(currentPlayer === "⚪" ? "white" : "black");
                                currentPlayer = (currentPlayer === "⚪") ? "⚫" : "⚪";
                            }
                        }
                    });

                    gridContainer.appendChild(cell);
                }
            }
        });
    </script>
</body>
</html>